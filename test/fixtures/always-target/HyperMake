---
format: hypermake.v0

targets:
    t0:
        cmds:
            - echo t0
    t0a:
        after: [t0]

    t1:
        always: true
        after:
            - t0

    t2:
        after: [t1]

    all:
        after:
            - t2
            - t0a

settings:
    default-targets: [all]
    exec-driver: shell
