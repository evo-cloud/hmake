---
format: hypermake.v0

targets:
    
    commit:
        image: alpine:latest
        cmds:
            - echo "Hello" > /tmp/hello
        commit: 
            - hmake-test-commit:newtag
            - hmake-test-commit:tag2
               
    verify1:
        after: 
            - commit 
        image: hmake-test-commit:newtag
        cmds:
            - test $(cat /tmp/hello) == "Hello" 

    verify2:
        after: 
            - commit 
        image: hmake-test-commit:tag2
        cmds:
            - test $(cat /tmp/hello) == "Hello" 
    test:
        after:
            - verify1
            - verify2
                    
